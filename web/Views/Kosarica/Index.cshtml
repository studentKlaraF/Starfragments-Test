@model SeminarskaNaloga.Models.KosaricaViewModel

<div class="row checkoutForm col-md-8 offset-md-2">
    <h2>Vaša košarica</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Izbrana količina</th>
                <th>Izdelek</th>
                <th class="text-right">Cena</th>
                <th class="text-right">Skupaj</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Kosarica.ArtikliKosarice)
            {
                <tr>
                    <td class="text-center">@line.kolicina</td>
                    <td class="text-left">@line.ArtikelKosare.naziv</td>
                    <td class="text-right">@line.ArtikelKosare.cena.ToString("c")</td>
                    <td class="text-right">
                        @((line.kolicina * line.ArtikelKosare.cena).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-drinkId="@line.ArtikelKosare.ArtikelId"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Skupaj:</td>
                <td class="text-right">
                    @Model.KosaricaSkupaj.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Narocilo" asp-action="ZakljucekNarocila" style="background-color: #530961;color:white">Zaključi</a>
        </div>
    </div>
</div>