@model IEnumerable<SeminarskaNaloga.Models.Trgovina>
@using SeminarskaNaloga.Models

@{
    ViewData["Title"] = "Trgovine";
}

<div class="row">
    @if (User.IsInRole("Lastnik")==false)
    {
        <div class="text-white" style="padding:1%">
            <a asp-controller="Trgovina" asp-action="Create" class="btn btn-success" style="background-color:#f8adc4;border-color:#f8adc4;color:#530961;"> <i>Ustvari trgovino</i></a>
        </div>
    }
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white" style="background-color: #530961;">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ime
                                    @if (User.IsInRole("Lastnik"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.TrgovinaId"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.img" width="100%" alt="@item.ime">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Ime: </b>@item.ime</p>
                            <p class="card-text"><b>Lastnik: </b>@item.lastnik</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" style="background-color:#f8adc4;border-color:#f8adc4;color:#530961" asp-action="Details" asp-route-id="@item.TrgovinaId">
                                    <i class="bi bi-eye-fill"></i> Podrobnosti
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

