@model Artikel


<div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white" style="background-color: #530961;">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.naziv
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@Model.ArtikelId"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@Model.img" width="100%" alt="@Model.naziv">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Opis: </b>@Model.opis</p>
                            <p class="card-text"><b>Cena: </b>@Model.cena.ToString("c")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" style="background-color:#f8adc4;border-color:#f8adc4;color:#530961" asp-action="Details" asp-route-id="@Model.ArtikelId">
                                    <i class="bi bi-eye-fill"></i> Podrobnosti
                                </a>
                                    <a class="btn btn-success text-white" 
                                    id="cartButton"
                                    asp-controller="Kosarica" 
                                    asp-action="dodajVKosarico" 
                                    asp-route-ArtikelId="@Model.ArtikelId"
                                    style="background-color: #530961;border-color:#530961;float:right">
                                    <i class="bi bi-cart-plus" ></i> Dodaj v ko≈°arico </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>